_vstask()
{
    local cur prev opts base
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    flags="--time --list"

    case "${prev}" in
        -h|--help|-l|--list) COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) ) ;;
        *)
            opts="$(${COMP_WORDS[*]} -l)"
            COMPREPLY=( $(compgen -W "${flags} ${opts}" -- ${cur}) )
        ;;
    esac
}
complete -F _vstask ./vstask
complete -F _vstask vstask
